# Database Configuration
POSTGRES_USER=resto_user
POSTGRES_PASSWORD=resto_password_change_me
POSTGRES_DB=resto_dashboard
DATABASE_URL=postgresql://resto_user:resto_password_change_me@postgres:5432/resto_dashboard

# MQTT Configuration
MQTT_BROKER=broker.hivemq.com
MQTT_PORT=1883
MQTT_TOPIC_SENSOR=gacoan-resto/sensor
MQTT_TOPIC_CAPACITY=gacoan-resto/dashboard/capacity

# Backend Configuration
BACKEND_PORT=4000
NODE_ENV=production

# Frontend Configuration
# Leave empty for relative paths (nginx reverse proxy handles routing)
# Or use your public domain for production
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_WS_URL=
# Production example:
# NEXT_PUBLIC_API_URL=http://yourdomain.com
# NEXT_PUBLIC_WS_URL=http://yourdomain.com

# Restaurant Configuration
DEFAULT_MAX_CAPACITY=100
RESTAURANT_NAME=Gacoan Resto